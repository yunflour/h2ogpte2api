# h2ogpte 配置
H2OGPTE_BASE_URL=https://h2ogpte.genai.h2o.ai

# Guest 模式（设为 true 时自动获取和刷新凭证，无需配置 SESSION 和 CSRF_TOKEN）
IS_GUEST=true

# 以下仅在 IS_GUEST=false 时需要配置
H2OGPTE_SESSION=your-session-id-here
H2OGPTE_CSRF_TOKEN=your-csrf-token-here
H2OGPTE_WORKSPACE_ID=workspaces/h2ogpte-guest
H2OGPTE_PROMPT_TEMPLATE_ID=

# 服务器配置
HOST=0.0.0.0
PORT=2156

# API Key 验证（留空则不验证，设置后需在请求中携带 Authorization: Bearer <key>）
API_KEY=123
